<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="bi bi-box-seam me-2"></i>Casiers Disponibles</h1>
</div>

<!-- Filters -->
<div class="card border-0 shadow-sm mb-4">
  <div class="card-body">
    <div class="row g-3 align-items-end">
      <div class="col-md-3">
        <label class="form-label">Taille</label>
        <select class="form-select" id="filter-size">
          <option value="">Toutes les tailles</option>
          <option value="small">Petit</option>
          <option value="medium">Moyen</option>
          <option value="large">Grand</option>
        </select>
      </div>
      <div class="col-md-3">
        <label class="form-label">Prix max</label>
        <input type="number" class="form-control" id="filter-price" placeholder="Ex: 50" min="0">
      </div>
      <div class="col-md-3">
        <label class="form-label">Trier par</label>
        <select class="form-select" id="sort-by">
          <option value="number">Numéro</option>
          <option value="price-asc">Prix croissant</option>
          <option value="price-desc">Prix décroissant</option>
          <option value="size">Taille</option>
        </select>
      </div>
      <div class="col-md-3">
        <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
          <i class="bi bi-arrow-counterclockwise me-1"></i>Réinitialiser
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Results count -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <p class="text-muted mb-0"><span id="results-count">0</span> casier(s) disponible(s)</p>
</div>

<!-- Lockers Grid -->
<div id="lockers-grid" class="row g-4">
  <div class="col-12 text-center py-5">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Chargement...</span>
    </div>
  </div>
</div>

<!-- Reservation Modal -->
<div class="modal fade" id="reservationModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-calendar-plus me-2"></i>Réserver un casier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="alert alert-info">
          <i class="bi bi-info-circle me-2"></i>
          <strong>Casier <span id="modal-locker-number"></span></strong> - 
          <span id="modal-locker-size"></span> - 
          <strong><span id="modal-locker-price"></span> €/heure</strong>
        </div>
        <form id="reservation-form">
          <input type="hidden" id="modal-locker-price-value">
          <input type="hidden" id="modal-locker-id">
          <div class="mb-3">
            <label class="form-label">Date de début</label>
            <div class="form-control bg-light text-muted">
              <i class="bi bi-clock me-1"></i>Maintenant
            </div>
            <small class="text-muted">La réservation commence immédiatement</small>
          </div>
          <div class="mb-3">
            <label for="hours" class="form-label">Durée (en heures)</label>
            <input type="number" class="form-control" id="hours" min="1" max="72" value="1" required>
            <small class="text-muted">Durée maximale : 72 heures</small>
          </div>
          <div class="mb-3">
            <label class="form-label">Date de fin estimée</label>
            <div class="form-control bg-light text-muted">
              <i class="bi bi-calendar-check me-1"></i><span id="end-time-preview"></span>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Prix total</label>
            <div class="form-control bg-success bg-opacity-10 text-success fw-bold fs-5">
              <i class="bi bi-cash me-1"></i><span id="total-price-preview"></span> €
            </div>
          </div>
          <div id="reservation-error" class="alert alert-danger d-none"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="confirm-reservation">
          <i class="bi bi-check-lg me-1"></i>Confirmer la réservation
        </button>
      </div>
    </div>
  </div>
</div>

<script src="/js/pages/user/lockers.js"></script>
